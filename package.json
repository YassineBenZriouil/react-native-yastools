{
  "name": "react-native-yastools",
  "version": "1.0.5",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "!**/dist/**"
  ],
  "scripts": {
    "build": "tsc && copyfiles -u 1 \"src/assets/**/*\" dist",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "publish": "node scripts/publish-all.js",
    "publish-all": "npm test && npm run build && yalc publish --push && npm run publish",
    "publish-one": "node scripts/publish-one.js"
  },
  "keywords": [
    "react-native",
    "components",
    "button",
    "utils"
  ],
  "author": "",
  "license": "ISC",
  "description": "React Native Utility Files and Utility Components ",
  "repository": {
    "type": "git",
    "url": "https://github.com/YassineBenZriouil/react-native-yastools"
  },
  "workspaces": [
    "src/packages/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./MediaView": {
      "types": "./dist/packages/media-view/index.d.ts",
      "import": "./dist/packages/media-view/index.js"
    },
    "./Button": {
      "types": "./dist/packages/button/index.d.ts",
      "import": "./dist/packages/button/index.js"
    },
    "./ConfirmationPopUp": {
      "types": "./dist/packages/confirmation-popup/index.d.ts",
      "import": "./dist/packages/confirmation-popup/index.js"
    },
    "./CheckBox": {
      "types": "./dist/packages/checkbox/index.d.ts",
      "import": "./dist/packages/checkbox/index.js"
    },
    "./BottomTabs": {
      "types": "./dist/packages/bottom-tabs/index.d.ts",
      "import": "./dist/packages/bottom-tabs/index.js"
    }
  },
  "dependencies": {
    "@react-native-yastools/core": "1.0.5",
    "@react-native-yastools/button": "1.0.5",
    "@react-native-yastools/bottom-tabs": "1.0.5",
    "@react-native-yastools/checkbox": "1.0.5",
    "@react-native-yastools/confirmation-popup": "1.0.5",
    "@react-native-yastools/media-view": "1.0.5"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.64.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-native": {
      "optional": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-flow": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@testing-library/react-native": "^12.4.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "react": "18.2.0",
    "react-native": "^0.73.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|tsx|js)",
      "<rootDir>/src/**/*.(test|spec).(ts|tsx|js)",
      "<rootDir>/packages/**/__tests__/**/*.(ts|tsx|js)",
      "<rootDir>/packages/**/*.(test|spec).(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^react-native-video$": "<rootDir>/src/__mocks__/react-native-video.js",
      "^react-native-safe-area-context$": "<rootDir>/src/__mocks__/react-native-safe-area-context.js",
      "^@dudigital/react-native-zoomable-view$": "<rootDir>/src/__mocks__/react-native-zoomable-view.js",
      "^@react-native-yastools/core(.*)$": "<rootDir>/src/core$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  }
}